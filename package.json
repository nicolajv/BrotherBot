{
  "name": "brotherbotv2",
  "description": "Discord bot for Big Brother",
  "version": "",
  "scripts": {
    "start": "docker-compose --file docker-compose.yml up --build ",
    "serve": "tsc-watch --onSuccess 'node dist/infrastructure/server.js'",
    "test": "npm run lint && tsc -noEmit && jest --silent --maxWorkers=1",
    "lint": "eslint ./src",
    "build": "rm dist -rf && tsc"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "testMatch": [
      "**/__tests__/**/*.+(ts|tsx|js)",
      "**/?(*.)+(spec|test).+(ts|tsx|js)"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/prod_node_modules/"
    ],
    "testEnvironment": "node",
    "collectCoverage": true,
    "coveragePathIgnorePatterns": [
      "./src/tests"
    ],
    "coverageDirectory": "coverage",
    "clearMocks": true,
    "setupFiles": [
      "./src/tests/setup.ts"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nicolajv/BrotherBotV2.git"
  },
  "author": "Nicolaj Vinholt",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/nicolajv/BrotherBotV2/issues"
  },
  "homepage": "https://github.com/nicolajv/BrotherBotV2#readme",
  "dependencies": {
    "@discordjs/rest": "^1.1.0",
    "discord.js": "^14.3.0",
    "express": "^4.18.1",
    "mongodb": "^4.8.0",
    "request": "^2.88.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/jest": "^28.1.5",
    "@types/mongodb": "^4.0.7",
    "@types/node": "^18.0.4",
    "@types/request": "^2.48.8",
    "@types/ws": "^8.5.3",
    "@typescript-eslint/eslint-plugin": "^5.30.6",
    "@typescript-eslint/parser": "^5.30.6",
    "eslint": "^8.19.0",
    "husky": "^8.0.1",
    "jest": "^28.1.3",
    "prettier": "^2.7.1",
    "pretty-quick": "^3.1.3",
    "ts-jest": "^28.0.6",
    "tsc-watch": "^5.0.3",
    "typescript": "^4.7.4"
  }
}
