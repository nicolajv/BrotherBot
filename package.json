{
  "name": "brotherbotv2",
  "description": "Discord bot for Big Brother",
  "version": "",
  "scripts": {
    "start": "docker-compose --file docker-compose.yml --file docker-compose.local.yml up --build ",
    "serve": "tsc-watch --onSuccess 'node dist/infrastructure/server.js'",
    "test": "npm run lint && tsc -noEmit && jest --forceExit --silent --maxWorkers=1",
    "lint": "eslint ./src",
    "build": "rm dist -rf && tsc",
    "lol": "docker build --build-arg VERSION=$(git rev-parse --short HEAD) --target production-build . && docker build --build-arg VERSION=$(git rev-parse --short HEAD) --target test-export . --output . && docker build -t nicolajv/brotherbotv2 --build-arg VERSION=$(git rev-parse --short HEAD) --target release ."
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "testMatch": [
      "**/__tests__/**/*.+(ts|tsx|js)",
      "**/?(*.)+(spec|test).+(ts|tsx|js)"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/prod_node_modules/"
    ],
    "testEnvironment": "node",
    "collectCoverage": true,
    "coveragePathIgnorePatterns": [
      "./src/tests"
    ],
    "coverageDirectory": "coverage",
    "clearMocks": true,
    "setupFiles": [
      "./src/tests/setup.ts"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nicolajv/BrotherBotV2.git"
  },
  "author": "Nicolaj Vinholt",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/nicolajv/BrotherBotV2/issues"
  },
  "homepage": "https://github.com/nicolajv/BrotherBotV2#readme",
  "dependencies": {
    "discord.js": "^13.3.0",
    "express": "^4.17.1",
    "moment": "^2.29.1",
    "mongodb": "^4.1.3",
    "request": "^2.88.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.2",
    "@types/mongodb": "^4.0.7",
    "@types/node": "^16.11.6",
    "@types/request": "^2.48.7",
    "@types/ws": "^8.2.0",
    "@typescript-eslint/eslint-plugin": "^5.2.0",
    "@typescript-eslint/parser": "^5.2.0",
    "eslint": "^8.1.0",
    "husky": "^7.0.4",
    "jest": "^27.3.1",
    "prettier": "^2.4.1",
    "pretty-quick": "^3.1.1",
    "tsc-watch": "^4.5.0",
    "typescript": "^4.4.4",
    "ts-jest": "^27.0.7"
  }
}
